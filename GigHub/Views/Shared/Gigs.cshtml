@model GigHub.ViewModels.GigsViewModel
@{
    ViewData["Title"] = "Home Page";
}

<h1>@Model.Heading</h1>
<form asp-controller="Gigs" asp-action="Search">
    <div class="form-group">
        <div id="searchGigs" class="input-group">
            @Html.TextBoxFor(m => m.SearchTerm, new { placeholder = "Search by artist, Genre or Location...", @class = "form-control"})
            <span class="input-group-addon">
                <i class="glyphicon glyphicon-search"></i>
            </span>
        </div>
    </div>
</form>
<ul class="gigs voffset40">
    @foreach (var gig in Model.UpcomingGigs)
    {
        <li>
            <div class="date">
                <div class="month">
                    @gig.DateTime.ToString("MMM")
                </div>
                <div class="day">
                    @gig.DateTime.ToString("d ")
                </div>
            </div>
            <div class="details">
                <span class="artist">
                    <a asp-controller="Gigs" asp-action="Details" asp-route-Id="@gig.Id">@gig.Artist.FullName</a>

                    @if (gig.IsCanceled)
                    {
                        <span class="label label-warning">Canceled</span>
                    }

                    @if (Model.ShowActions)
                    {
                        <button data-user-id="@gig.ArtistId" class="btn btn-link btn-sm pull-right js-toggle-follow">Follow</button>
                    }
                </span>
                <span class="genre">
                    @gig.Genre.Name
                </span>
                @if (Model.ShowActions && !gig.IsCanceled)
                {
                    <button
                        data-gig-id="@gig.Id"
                        class="btn @(Model.Attendances.Contains(gig.Id) ? "btn-info" : "btn-default") btn-sm pull-right js-toggle-attendance">
                        Going ?
                    </button>
                }
            </div>
        </li>
    }
</ul>
@section Scripts
    {
    <script>
        $(document).ready(function () {
            $(".js-toggle-attendance").click(function (e) {
                var button = e.target;
                $.post("/api/attendances", { gigId: $(button).attr("data-gig-id") })
                    .done(function () {
                        $(button)
                            .removeClass("btn-default")
                            .addClass("btn-info")
                            .text("Going");
                    })
                    .fail(function (jqXhr) {
                        alert(jqXhr.responseJSON);
                    });
            });
        });

        $(document).ready(function () {
            $(".js-toggle-follow").click(function (e) {
                var button = e.target;
                $.post("/api/followings", { followeeId: $(button).attr("data-user-id") })
                    .done(function () {
                        $(button).text("Following");
                    })
                    .fail(function (jqXhr) {
                        alert(jqXhr.responseJSON);
                    });
            });
        });
    </script>
}
